<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header.links">
            <block name="authorization-new-login" class="Magento\Customer\Block\Account\AuthorizationLink" template="MW_Po::account/link/authorization.phtml"/>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Customer\Block\Account\Customer" name="be-get-block-form" template="MW_Po::account/customer.phtml">
                <block class="Magento\Customer\Block\Form\Login" name="customer_form_login" template="Magento_Customer::form/login.phtml"/>
                <block name="new-name-content" class="Magento\Customer\Block\Account\AuthorizationLink" template="MW_Po::account/form/login.phtml" after="-"/>
            </block>
        </referenceContainer>
        <referenceBlock name="authorization-link-login"  remove="true"/>
    </body>
</page>